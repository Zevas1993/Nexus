# Nexus AI Assistant Configuration

# Flask configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_APP=app.py

# Database configuration
DATABASE_URL=sqlite:///app.db

# Google OAuth configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Hugging Face API configuration (for hybrid AI)
HF_API_TOKEN=your_huggingface_token
HF_ENDPOINT=https://api-inference.huggingface.co/models/gpt2

# Local AI model configuration
LOCAL_MODEL=EleutherAI/gpt-neo-125M
THRESHOLD_CPU=80
THRESHOLD_GPU=80
CONTEXT_WINDOW=5
MAX_LENGTH=512

# Redis configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# RAG configuration
USE_HYBRID_SEARCH=true
USE_RERANKING=true
RAG_TOP_K=5
RERANKING_TOP_K=20
HYBRID_ALPHA=0.7
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
EMBEDDING_MODEL=all-MiniLM-L6-v2

# System monitoring
THROTTLE_THRESHOLD_CPU=90
THROTTLE_THRESHOLD_MEMORY=90
THROTTLE_THRESHOLD_GPU=90
SYSTEM_CHECK_INTERVAL=5

# Plugin configuration
PLUGIN_DIR=plugins
OPENWEATHER_API_KEY=your_openweather_api_key
